extends blocks/base.jade

block title 
	title Внутренняя страница

block style-libs

include blocks/article_2.jade

block content

	.page.wrapper

		include blocks/header.jade
		
		main.content

			// banner-b
			.banner-b.banner-b--second
				.banner-b__title
					p Сфера применения
				.banner-b__text
					p В данном разделе скомплектованы решения и оборудования для простой и быстрой интеграции в вашу сферу бизнеса.
			//	/banner-b

			// grid-2col
			.grid-2col
				.row 
					.grid-2col__col
						+article_2('Интернет-магазин')
					.grid-2col__col
						+article_2('Розничная торговля')
			//	/grid-2col

			// grid-4col
			.grid-4col
				.row 
					.grid-4col__col
						+article_2('Минимаркет')
					.grid-4col__col
						+article_2('Кафе')
					.grid-4col__col
						+article_2('Ресторан')
					.grid-4col__col
						+article_2('Фастфуд')
					.grid-4col__col
						+article_2('Бар')
					.grid-4col__col
						+article_2('Салон красоты')
					.grid-4col__col
						+article_2('Автосервис')
					.grid-4col__col
						+article_2('Услуги')
			//	/grid-4col

			// selection
			.selection
				h2.selection__title Подбор кассы по параметрам
				.selection__text Подбор онлайн-кассы от ITCOM Market среди 3000 моделей специально для вас
				form(action="#").selection__form

					.selection__select.input Вид деятельности
						.selection__drop 
							ul.selection__list
								li
									input(type="checkbox")#business_0
									label(for="business_0").selection__checkbox
									label(for="business_0").selection__label-text Аптека
								li
									input(type="checkbox")#business_1
									label(for="business_1").selection__checkbox
									label(for="business_1").selection__label-text Кафе/бар/ресторан
								li
									input(type="checkbox")#business_2
									label(for="business_2").selection__checkbox
									label(for="business_2").selection__label-text Курьерские услуги
								li
									input(type="checkbox")#business_3
									label(for="business_3").selection__checkbox
									label(for="business_3").selection__label-text Магазин у дома
								li
									input(type="checkbox")#business_4
									label(for="business_4").selection__checkbox
									label(for="business_4").selection__label-text Салоны красоты/медцентры
								li
									input(type="checkbox")#business_5
									label(for="business_5").selection__checkbox
									label(for="business_5").selection__label-text Транспорт
								li
									input(type="checkbox")#business_6
									label(for="business_6").selection__checkbox
									label(for="business_6").selection__label-text Услуги

					.selection__select.input Характер работы
						.selection__drop 
							ul.selection__list
								li
									input(type="checkbox")#character_0
									label(for="character_0").selection__checkbox
									label(for="character_0").selection__label-text Разъездной
								li
									input(type="checkbox")#character_1
									label(for="character_1").selection__checkbox
									label(for="character_1").selection__label-text Смешанный
								li
									input(type="checkbox")#character_2
									label(for="character_2").selection__checkbox
									label(for="character_2").selection__label-text Стационарный

					.selection__select.input Ценовой сегмент
						.selection__drop 
							ul.selection__list
								li
									input(type="checkbox")#segment_0
									label(for="segment_0").selection__checkbox
									label(for="segment_0").selection__label-text Высокий
								li
									input(type="checkbox")#segment_1
									label(for="segment_1").selection__checkbox
									label(for="segment_1").selection__label-text Низкий
								li
									input(type="checkbox")#segment_2
									label(for="segment_2").selection__checkbox
									label(for="segment_2").selection__label-text Средний

					.selection__input
						input(type="text" placeholder="Имя" name="name").input
					.selection__input
						input(type="text" placeholder="Телефон" name="tel").input

					button(type="submit").btn Подобрать кассу
			//	/selection

			// feedback
			form(action="").feedback
				h2.title.title--center Затрудняетесь с подбором кассовой техники?
				.feedback__text Мы предложим вам оптимальное решение!
				.feedback__row 
					input(type="text" placeholder="Имя" name="name").feedback__input.feedback__input--maw.input
					input(type="text" placeholder="Телефон" name="tel").feedback__input.feedback__input--maw.input
					.btn Отправить заявку
			//	/feedback
				
		include blocks/footer.jade

block js-libs
	script(src="js/libs/jquery.min.js")